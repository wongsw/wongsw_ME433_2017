<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.songwei.sw_androidcamera.MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        //TextView for Title
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camera app to identify Green color"
            android:id="@+id/title"/>
        //TextView to print bar progress
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progress bar initial value"
            android:id="@+id/barStatus"/>
        //Creates seek bar
        <SeekBar
            android:id="@+id/seek1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:progress="20"
            android:secondaryProgress="20"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />
        //TextView to print the frames per second
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FPS initial value"
            android:id="@+id/cameraStatus"/>
        //SurfaceView to see where your app thinks the line is
        <SurfaceView
            android:id="@+id/surfaceview"
            android:layout_width="640px"
            android:layout_height="480px" />
        //TextureView to see what the camera sees
        <TextureView
            android:id="@+id/textureview"
            android:layout_width="640px"
            android:layout_height="480px" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
